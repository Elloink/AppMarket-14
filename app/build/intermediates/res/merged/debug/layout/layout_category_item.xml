<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/menu1_ll"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/list_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img1_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/name1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:text="啦啦啦啦啦啦啦" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu2_ll"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/list_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img2_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/name2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:text="啦啦啦啦啦啦啦" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu3_ll"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/list_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img3_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/name3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:text="啦啦啦啦啦啦啦" />
    </LinearLayout>

</LinearLayout>